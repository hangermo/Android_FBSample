<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <fragment android:name="hello.sample.testing.LoginFragment"
          android:id="@+id/loginFragment"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />
    
    <fragment android:name="hello.sample.testing.NotLoginFragment"
          android:id="@+id/notLoginFragment"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />
    <!-- 此為FaceBook SDK所提供 -->
    <fragment android:name="com.facebook.widget.UserSettingsFragment"
          android:id="@+id/userSettingsFragment"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />
    
</LinearLayout>
